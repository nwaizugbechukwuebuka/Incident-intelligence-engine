{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StructuredIncident",
  "type": "object",
  "properties": {
    "id": {"type": "string"},
    "timestamp": {"type": "string", "format": "date-time"},
    "source": {"type": "string"},
    "raw_text": {"type": "string"},
    "entities": {
      "type": "array",
      "items": {"type": "object"}
    },
    "classification": {"type": "string"},
    "severity": {"type": "string"},
    "confidence": {"type": "number"},
    "actions": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "required": ["id", "timestamp", "source", "raw_text", "entities", "classification", "severity", "confidence", "actions"]
}
